<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="colorPrimary">@color/title_background</item>
        <item name="colorPrimaryDark">@color/title_background</item>
        <item name="android:windowSoftInputMode">adjustPan|stateHidden</item>
    </style>

    <!--透明状态栏使用的样式-->
    <style name="TranslucentStatusTheme" parent="AppTheme">
        <!-- <item name="android:windowTranslucentStatus" tools:targetApi="21">true</item>>-->
    </style>

    <!--全屏样式-->
    <style name="FullScreenTheme" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
    </style>

</resources>